<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%=raw @post.content %>
</p>

<% images = @post.content.scan(/(<img(?:.+?)>)/).flatten %>
<% if images.any? %>
  <hr>

  <ul class='pl-4'>
    <% images.each do |image| %>
      <li><%= image %></li>
    <% end %>
  </ul>
<% end %>

<hr>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
